<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listNom"
        android:paddingRight="5dp"
        android:paddingEnd="5dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listPrenom"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listNom"
        android:layout_toEndOf="@+id/listNom" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listNaissance"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listNom" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listVille"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:layout_toRightOf="@+id/listNaissance"
        android:layout_toEndOf="@+id/listNaissance"
        android:layout_below="@+id/listNom" />
</RelativeLayout>